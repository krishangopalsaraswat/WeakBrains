<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e96f9"
    tools:context="com.example.abhi.weakbrain.FirstpageActicity">


    <TextView
        android:id="@+id/resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/resources"
        android:textSize="42sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exam"
        android:layout_alignStart="@+id/exam"
        android:layout_below="@+id/resource"
        android:layout_marginTop="13dp"
        android:text="1 .Exam Papers"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textSize="24dp"
        android:layout_marginLeft="15dp"/>


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/exampapers" />

    <Button
        android:id="@+id/exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="23dp"
        android:background="#0e96f9"
        android:text="Click Here to Open....."
        android:textColor="#ffcb2b"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:onClick="exampaper"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimaryDark"
        android:text="Next"
        android:textSize="18sp"
        android:onClick="second"/>


</RelativeLayout>
