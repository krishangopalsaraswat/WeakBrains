<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhi.weakbrain.ThirdpageActivity"
    android:background="#0e96f9">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:id="@+id/resource2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/resources"
        android:textSize="42sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/exam"
        android:layout_alignStart="@+id/exam"
        android:layout_below="@+id/resource2"
        android:layout_marginTop="13dp"
        android:text="3. Student/Teacher Contact"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textSize="24dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="330dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/s" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contact"
        android:background="#0e96f9"
        android:onClick="studentsearch"
        android:text="Click Here to Open....."
        android:textColor="#ffcb2b"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="24sp"
        />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"
        android:onClick="previoustwo"
        android:text="Previous"
        android:textSize="18sp" />

</RelativeLayout>
